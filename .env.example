# Shopify API Credentials
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret

# MongoDB Connection
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/database
MONGODB_DB_NAME=meta-maximus

# Server Configuration
PORT=3000
HOST=your-app-name.herokuapp.com

# Shopify API Scopes (updated without metafields)
SCOPES=write_products,read_products,read_content,write_content

# Environment 
NODE_ENV=production

# Optional: Debug settings
DEBUG_LEVEL=info
ALLOW_UNAUTHENTICATED_API=false

# Optional: Default shop for development
SHOP=your-store.myshopify.com
EOF < /dev/null